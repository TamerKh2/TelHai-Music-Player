<Window x:Class="TelHai.DotNet.PlayerProject.MusicPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Classroom Music Player" Height="550" Width="900"
        Background="#222" Foreground="White" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">

            <TextBlock x:Name="txtStatus" Text="Ready" Foreground="#AAA" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtCurrentSong" Text="No Song Selected" FontSize="20" FontWeight="Bold" Margin="0,10,0,20" HorizontalAlignment="Center"/>

            <Slider x:Name="sliderProgress"
                    IsMoveToPointEnabled="True"
                    Margin="0,0,0,20"
                    PreviewMouseLeftButtonDown="Slider_DragStarted"
                    PreviewMouseLeftButtonUp="Slider_DragCompleted"/>

            <!-- Player buttons -->
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="STOP" Click="BtnStop_Click" Width="80" Height="40" Margin="5"/>
                <Button Content="PLAY" Click="BtnPlay_Click" Width="100" Height="40" Margin="5" Background="#007ACC" Foreground="White"/>
                <Button Content="PAUSE" Click="BtnPause_Click" Width="80" Height="40" Margin="5"/>
            </WrapPanel>

            <!-- Volume -->
            <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Volume" VerticalAlignment="Center" Margin="5"/>
                <Slider x:Name="sliderVolume" Minimum="0" Maximum="1" Value="0.5" Width="150" ValueChanged="SliderVolume_ValueChanged"/>
            </WrapPanel>

        </StackPanel>

        <!-- RIGHT SIDE -->
        <Grid Grid.Column="1" Margin="10,0,0,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Library" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox x:Name="lstLibrary" Grid.Row="1" Background="#333" Foreground="White"
                     MouseDoubleClick="LstLibrary_MouseDoubleClick"/>

            <!-- Add/Remove Buttons -->
            <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add MP3" Click="BtnAdd_Click" Width="100" Margin="5"/>
                <Button Content="Remove" Click="BtnRemove_Click" Width="100" Margin="5"/>
                <Button Content="Load 50 Songs" Click="BtnLoad50_Click" Width="120" Margin="5"/>
                <Button Content="Add Manual Song" Click="BtnAddManual_Click" Width="140" Margin="5"/>
                <Button Content="Clear All" Click="BtnClearAll_Click" Width="100" Margin="5"/>

            </WrapPanel>

            <!-- LINQ Features -->
            <StackPanel Grid.Row="3" Margin="0,10,0,0">

                <WrapPanel HorizontalAlignment="Center">
                    <Button Content="Sort Duration ↑" Click="BtnSortDurationAsc_Click" Width="150" Margin="5"/>
                    <Button Content="Sort Duration ↓" Click="BtnSortDurationDesc_Click" Width="150" Margin="5"/>
                    <Button Content="Sort Title" Click="BtnSortTitle_Click" Width="140" Margin="5"/>
                </WrapPanel>

                <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox x:Name="txtSearch" Width="150" Margin="5"/>
                    <Button Content="Search" Click="BtnSearch_Click" Width="100" Margin="5"/>
                </WrapPanel>

                <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Short Hits &lt; 3 min" Click="BtnShortSongs_Click" Width="160" Margin="5"/>
                    <Button Content="Stats" Click="BtnStats_Click" Width="100" Margin="5"/>
                    <Button Content="Group By Artist" Click="BtnGroup_Click" Width="150" Margin="5"/>
                </WrapPanel>

            </StackPanel>

        </Grid>
    </Grid>
</Window>
